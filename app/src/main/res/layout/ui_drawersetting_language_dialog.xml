<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="350dp"
    android:background="@drawable/custom_border_bg_radius_all"
    tools:context=".Ui_Main_Activity"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:id="@+id/layout_drawersetting_language_dialog">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_change_language_Korean"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/ic_play"
                        android:visibility="invisible"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_change_language_English"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/ic_play"
                        android:visibility="invisible"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_change_language_Japanese"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/ic_play"
                        android:visibility="invisible"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_change_language_Chinese"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@drawable/ic_play"
                        android:visibility="invisible"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_change_language_korean"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="한국어"
                        android:textColor="?attr/color_common_black_softgray"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="center|left"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_change_language_English"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="English"
                        android:textColor="?attr/color_common_black_softgray"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="center|left"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_change_language_Japanese"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="日本"
                        android:textColor="?attr/color_common_black_softgray"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="center|left"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tv_change_language_Chinese"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="中国人"
                        android:textColor="?attr/color_common_black_softgray"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="center|left"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_now_language_korean"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/text_settings_language_now"
                    android:textColor="@color/main_concept_color"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/tv_now_language_English"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/text_settings_language_now"
                    android:textColor="@color/main_concept_color"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="invisible" />
                <TextView
                    android:id="@+id/tv_now_language_Japanese"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/text_settings_language_now"
                    android:textColor="@color/main_concept_color"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="invisible"/>
                <TextView
                    android:id="@+id/tv_now_language_Chinese"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/text_settings_language_now"
                    android:textColor="@color/main_concept_color"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginBottom="10dp"
        android:gravity="center|bottom"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_language_change_cancel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:text="@string/text_cancel"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btn_language_change_ok"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/text_change"
            android:textStyle="bold"
            android:textSize="10dp"
            android:textColor="@color/white"
            android:enabled="false"/>
    </LinearLayout>
</LinearLayout>