<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui_Main_Activity"
    android:id="@+id/layout_drawer_main">

    <FrameLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left|top"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_btn_drawer_option"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="10dp"
                android:elevation="10dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_drawer_option"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_layout_searchbox"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="120dp"
            android:visibility="gone"
            tools:visibility="visible">
            <EditText
                android:id="@+id/et_search_contents"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/text_search"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:gravity="left"
                android:maxLength="10"
                android:singleLine="true"/>
            <LinearLayout
                android:id="@+id/layout_btn_start_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/ic_search"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="right|top"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_btn_call_searchbox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:id="@+id/iv_btn_search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_search"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_btn_toolbar_optionmenu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                android:layout_marginRight="10dp">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginRight="6dp">
                </androidx.appcompat.widget.Toolbar>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="60dp">
            <TextView
                android:id="@+id/tv_btn_start_search_alert"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/text_searchbox_alert"
                android:textSize="15dp"
                android:textColor="@color/main_concept_color"
                android:textStyle="bold"
                android:gravity="top|right"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>
    </FrameLayout>

    <fragment
        android:id="@+id/layout_main_mapfrag"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone">
    </fragment>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/layout_bottomlayout_mainframe"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="bottom|right"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:id="@+id/layout_bottomlayout_bottommenuframe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="invisible"
                        tools:visibility="visible"
                        android:gravity="right">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:gravity="top">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardview_btn_bottommenu1_setmylocation"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:cardCornerRadius="15dp"
                                app:cardBackgroundColor="#80FF0000"
                                app:cardElevation="0dp">
                                <TextView
                                    android:id="@+id/tv_btn_bottommenu1_setmylocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:text="@string/text_bottommenu_setmylocation"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="10dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:visibility="gone"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"/>
                                <ImageView
                                    android:id="@+id/iv_btn_bottommenu1_setmylocation"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_bottommenu_setmylocation" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:gravity="top">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardview_btn_bottommenu2_searchmap_mapposition"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:cardCornerRadius="15dp"
                                app:cardBackgroundColor="#80FF0000"
                                app:cardElevation="0dp">
                                <TextView
                                    android:id="@+id/tv_btn_bottommenu2_searchmap_mapposition"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:text="@string/text_bottommenu_searchmap_mapposition"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="10dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:visibility="gone"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"/>
                                <ImageView
                                    android:id="@+id/iv_btn_bottommenu2_searchmap_mapposition"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_bottommenu_searchmap_mapposition"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:gravity="top">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardview_btn_bottommenu3_realtime_gps"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:cardCornerRadius="15dp"
                                app:cardBackgroundColor="#80FF0000"
                                android:layout_marginBottom="5dp"
                                app:cardElevation="0dp">
                                <TextView
                                    android:id="@+id/tv_btn_bottommenu3_realtime_gps"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:text="@string/text_bottommenu_realtime_gps_turn_on"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="10dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:visibility="gone"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="5dp"/>
                                <ImageView
                                    android:id="@+id/iv_btn_bottommenu3_realtime_gps"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_bottommenu_realtime_gps_off"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_btn_call_bottommenu"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:cardCornerRadius="15dp"
                        app:cardBackgroundColor="#80FF0000"
                        app:cardElevation="0dp">
                        <ImageView
                            android:id="@+id/iv_btn_call_bottommenu"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_dot_menu"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_btn_bottomlayout_move"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_gravity="top"
                    android:background="@drawable/custom_border_bg_topradius_leftright">
                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="5dp"
                        app:cardCornerRadius="3dp"
                        android:elevation="10dp"
                        android:layout_marginTop="2dp">
                        <View
                            android:id="@+id/view_btn_bottomlayout_move"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/main_concept_color"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <include layout="@layout/ui_main_activity_bottomtab"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/layout_main_mainwait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/color_common_white_darkgray"
        tools:visibility="gone">
    </FrameLayout>
    <include layout="@layout/ui_main_activity_drawer_option"/>
    <include layout="@layout/ui_main_activity_drawer_setting"/>

</androidx.drawerlayout.widget.DrawerLayout>