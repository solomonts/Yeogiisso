<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".management.store.Ui_StoreManagement_Store_Registration_Activity"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="대표 이미지"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/main_concept_color"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview_store_registration_store_pic"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="15dp"
                        android:elevation="10dp"
                        android:layout_gravity="center">
                        <ImageView
                            android:id="@+id/iv_store_registration_store_pic"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_upload_pic"
                            android:scaleType="fitXY"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="이미지 삭제"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                    <TextView
                        android:id="@+id/tv_store_registration_store_uploadpic"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="이미지 등록"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="이미지 다시 선택"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:gravity="center"
                        android:visibility="gone"
                        tools:visibility="visible"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="점포 이름"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/main_concept_color"
                        android:gravity="center|left"
                        android:layout_marginTop="10dp"/>
                    <EditText
                        android:id="@+id/et_store_registration_store_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="점포 이름"
                        android:textColor="?attr/color_common_black_softgray"
                        android:textSize="15dp"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:textColorHint="@color/main_minor_color"
                        android:theme="@style/EditTextTheme"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="점포 위치"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/main_concept_color"
                        android:gravity="center|left"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/tv_store_registration_store_address_location"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="현재위치"
                            android:textColor="@color/main_concept_color"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:enabled="false"/>
                        <TextView
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:text="|"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:gravity="center" />
                        <TextView
                            android:id="@+id/tv_store_registration_store_address_choice_map"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="지도에서 지정"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_store_registration_store_address_notice"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="(현재위치)"
                            android:textSize="10dp"
                            android:textColor="@color/black"
                            android:gravity="left|center"/>
                        <com.solomonm.yeogiisso.utils.MarqueeTextView
                            android:id="@+id/tv_store_registration_store_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/text_loading"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:gravity="left|center"
                            android:layout_marginLeft="10dp"
                            android:singleLine="true"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="업종 구분"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/main_concept_color"
                        android:gravity="center|left"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="10dp">
                        <LinearLayout
                            android:id="@+id/layout_store_registration_storecate_main"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:gravity="right"
                            android:layout_marginRight="10dp">
                            <!--
                            <TextView
                                android:id="@+id/tv_store_registration_storecate_main"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="노점상"
                                android:textSize="15dp"
                                android:textColor="?attr/color_common_black_softgray"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:ellipsize="end"/>
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/ic_play_down"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"/>
                            -->
                            <Spinner
                                android:id="@+id/sp_store_registration_storecate_main"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layout_store_registration_storecate_sub"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:gravity="left"
                            android:layout_marginLeft="10dp">
                            <!--
                            <TextView
                                android:id="@+id/tv_store_registration_storecate_sub"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:text="붕어빵"
                                android:textSize="15dp"
                                android:textColor="?attr/color_common_black_softgray"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:maxLines="1"
                                android:ellipsize="end"/>
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/ic_play_down"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"/>
                            -->
                            <Spinner
                                android:id="@+id/sp_store_registration_storecate_sub"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="영업 요일"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/main_concept_color"
                        android:gravity="center|left"
                        android:layout_marginTop="10dp"/>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_store_registration_store_openweek"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="월화수목금"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|right">
                            <TextView
                                android:id="@+id/tv_store_registration_change_openweek"
                                android:layout_width="60dp"
                                android:layout_height="25dp"
                                android:text="변경"
                                android:textSize="15dp"
                                android:textColor="@color/main_concept_color"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:background="@drawable/custom_border_bg_button"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="오픈 시간"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/main_concept_color"
                        android:gravity="center|left"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <NumberPicker
                            android:id="@+id/np_store_registration_opentime_h"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:theme="@style/NumberPickerTheme"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="시"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <NumberPicker
                            android:id="@+id/np_store_registration_opentime_m"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="20dp"
                            android:theme="@style/NumberPickerTheme"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="분"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="마감 시간"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/main_concept_color"
                        android:gravity="center|left"
                        android:layout_marginTop="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <NumberPicker
                            android:id="@+id/np_store_registration_endtime_h"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:theme="@style/NumberPickerTheme"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="시"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"/>
                        <NumberPicker
                            android:id="@+id/np_store_registration_endtime_m"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="20dp"
                            android:theme="@style/NumberPickerTheme"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="분"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="대표 번호"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/main_concept_color"
                        android:gravity="center|left"
                        android:layout_marginTop="10dp"/>
                    <EditText
                        android:id="@+id/et_store_registration_number"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="대표 전화번호"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:gravity="center|left"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:inputType="number|phone"
                        android:textColorHint="@color/main_minor_color"
                        android:theme="@style/EditTextTheme"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="점포 설명"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/main_concept_color"
                        android:gravity="center|left"
                        android:layout_marginTop="10dp"/>
                    <EditText
                        android:id="@+id/et_store_registration_store_explanation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="점포 설명"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:maxLength="20"
                        android:textColorHint="@color/main_minor_color"
                        android:theme="@style/EditTextTheme"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_store_registration_map_mainframe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:visibility="gone">
        <fragment
            android:id="@+id/layout_store_registration_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </fragment>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_store_registration_map_button_mainframe"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:visibility="gone">
        <Button
            android:id="@+id/button_store_registration_map_button_cancel"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="취소"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_gravity="center|bottom"
            android:layout_marginRight="20dp"/>
        <Button
            android:id="@+id/button_store_registration_map_button_ok"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="여기로 지정"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_gravity="center|bottom"
            android:enabled="false"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_store_registration_enrollment"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="등록"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_gravity="center|bottom"/>

</FrameLayout>