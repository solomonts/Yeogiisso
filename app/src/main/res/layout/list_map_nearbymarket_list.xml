<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/soft_gray">
        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_icon_appicon"/>
            <LinearLayout
                android:id="@+id/ll_not_open"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66000000"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="open\n10:00"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:id="@+id/ll_bottom_list"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_border_bg_radius_all_for_bottomlayoutlist">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">
                <TextView
                    android:id="@+id/tv_nearby_distance"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="@string/text_loading"
                    android:textColor="@color/main_second_color"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/tv_str_nm"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="@string/text_loading"
                    android:textColor="@color/main_second_color"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </FrameLayout>
            <TextView
                android:id="@+id/tv_nearby_menu_des"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/text_loading"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12dp"
                android:gravity="left"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_nearby_sls_dw"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="@string/text_loading"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12dp"
                android:gravity="left"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
